                <li class="line">
                    <span>没有账号？</span>&nbsp;
                    <span><a href="#">立即注册</a></span>
                </li>
            
        </div>
    </div>
    <!--登录 结束-->
</div>
<!--主体 结束 -->
<script type="text/javascript" src="/Scripts/yzm.js"></script>
<script type="text/javascript">
    $('.button1').bind('click', function() {
        $.ajax({
            type: "POST",
            url: "UserLogin",
            data: "userName=" + $('.phone1').val() + "&pwd=" + $('.q1').val(),
            success: function (data) {
                console.log(1);
                if (data.result) {
                    $('.nologo').addClass('hide');
                    $('.logoed').removeClass('hide');
                    location.href = '/User/UserInfo';
                } else {
                    $('.phone').html('用户名或密码次错误');
                }
            }
        });
    });
</script>